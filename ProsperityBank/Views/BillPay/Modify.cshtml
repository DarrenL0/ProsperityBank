@model BillPay

@{
    ViewData["Title"] = "Modify";
}

<h1>Bill Pay</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Modify">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillPayID" />

            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <select asp-for="AccountNumber" class="form-control" asp-items="ViewBag.AccountNumber"></select>
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayeeID" class="control-label"></label>
                <select asp-for="PayeeID" class="form-control" asp-items="ViewBag.PayeeID"></select>
                <span asp-validation-for="PayeeID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ScheduleDate" class="control-label"></label>
                <input asp-for="ScheduleDate" class="form-control" />
                <span asp-validation-for="ScheduleDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PeriodType" class="control-label"></label>
                <select asp-for="PeriodType" class="form-control" asp-items="ViewBag.Periods"></select>
                <span asp-validation-for="PeriodType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" , asp-controller="BillPay" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>