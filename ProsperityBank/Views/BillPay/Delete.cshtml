@model BillPay

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Do you want to stop this schedule payment?</h3>

<h4>BillPay</h4>
<hr />
<d1 class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(x => x.Amount)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(x => x.Amount)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(x => x.ScheduleDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(x => x.ScheduleDate)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(x => x.PeriodType)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(x => x.PeriodType)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(x => x.AccountNumber)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(x => x.AccountNumber)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(x => x.Payee)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(x => x.Payee.PayeeName)</dd>
</d1>

<form asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index">Cancel</a>
</form>

